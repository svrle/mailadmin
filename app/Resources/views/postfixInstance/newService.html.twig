{% extends 'base.html.twig' %}


{% block body %}

    <p>{{ postfix }}</p><br />
    # ==========================================================================<br />
    # service type  private(yes) unpriv(yes)  chroot(yes)  wakeup(never)  maxproc(100) command + args<br />
    # ==========================================================================<br />
    {% for service in postfix.services %}
        <a href="{{ path('postfix_edit_service', { 'service': service.id }) }}">{{ service }} {{ service.type }} {{ service.private }} {{ service.unpriv }} {{ service.chroot }} {{ service.wakeup }} {{ service.maxproc }} {{ service.command }}</a> <a href="{{ path('service_property_new', { 'service': service.id }) }}">add</a>
        {% for property in service.properties %}

            <br />&nbsp;&nbsp;-o <a href="{{ path('property_edit', { 'property': property.id }) }}">{{ property }}={{ property.value }}</a> ( <a href="{{ path('property_edit', { 'property': property.id }) }}">{{ property.getOverridedMainFunction }}</a> )
        {% endfor %}
        <br />
    {% endfor %}
    <p />
    {{ form_start(form) }}
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}


